<!-- Responsive panel example-->

<div class="row">
  <div class="col-sm-offset-1 col-sm-10 col-md-offset-2 col-md-8">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">Movie #<%= @movie.id %></h3>
      </div>
      <div class="panel-body">
        <div class="row">
          <div class="col-md-12">
            <dl class="dl-horizontal">
              <dt>Title</dt>
              <dd><%= @movie.title %></dd>

              <dt>Year</dt>
              <dd><%= @movie.year %></dd>

              <dt>Duration</dt>
              <dd><%= @movie.duration %></dd>

              <dt>Description</dt>
              <dd><%= @movie.description %></dd>

              <dt>Image url</dt>
              <dd><%= image_tag(@movie.image_url)%></dd>

              <dt>Director</dt>
              <!-- TODO: Extract the next line into an instance method  so you can use @movie.director.name instead of @director.name-->
              <dd><%= link_to image_tag(@movie.director.name, director_url(@movie.director.id)) %></dd>

            </dl>
            <div class="btn-group btn-group-justified">
              <%= link_to movies_url, :class => "btn btn-primary" do %>
                <i class="fa fa-chevron-left"></i>
              <% end %>
              <%= link_to edit_movie_url(@movie.id), :class => "btn btn-warning" do %>
                <i class="fa fa-edit"></i>
              <% end %>
              <%= link_to movie_url(@movie.id), :method => "delete", :data => { :confirm => "Do you really want to delete this movie?" }, :class => "btn btn-danger" do %>
                <i class="fa fa-trash-o"></i>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<!-- End responsive panel example -->
